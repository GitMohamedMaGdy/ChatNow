
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="jumbotron bg-light">
    <h2 class="text-center text-primary">
        <i class="fab fa-facebook-messenger"></i>&nbsp; Public Talk
    </h2>


    <div class="container" style="padding-top:60px">
        <div class="row">
            <div class="col-md-6">
                <span>Name : </span><br />
                <input type="text" id="txtUser" class="form-control" /><br />
                <span>Enter your message</span><br />
                <textarea rows="10" cols="50" id="txtMessage" class="form-control"></textarea><br />
                <button type="submit" id="btnSend" class="btn btn-info">Send</button>
            </div>

            <div class="col-md-6">
                <h3>   Message List: </h3>
                <ul id="list" class="alert alert-info">
                </ul>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/signalr/dist/browser/signalr.js"></script>
<script src="~/js/javascript.js"></script>
